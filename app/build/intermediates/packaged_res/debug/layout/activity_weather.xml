<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvvm.WeatherActivity"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:id="@+id/ll_AW_enterCityDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin_5dp"
        android:layout_marginTop="@dimen/activity_margin_15dp"
        android:layout_marginRight="@dimen/activity_margin_5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_AW_cityNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_cityname_label"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/teal_700"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_25dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_AW_enterCityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/enter_cityname_label"
                android:inputType="textNoSuggestions"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789., "
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/teal_700"
                android:textSize="@dimen/text_size_15sp"/>
            <ImageView
                android:id="@+id/iv_AW_cityNameSearchIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                app:srcCompat="@drawable/ic_search_24"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_AW_weatherList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin_5dp"
        tools:listitem="@layout/item_weather_adapter"
        tools:itemCount="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_AW_enterCityDetails"/>

    <TextView
        android:id="@+id/tv_AW_noWeatherList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/activity_margin_30dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_AW_enterCityDetails"
        android:text="@string/no_weatherdata_label"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_12sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pb_AW_progressDialog"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminateTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>